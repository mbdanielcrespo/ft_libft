#include "libft.h"

static t_i32	ft_count_words(char const *s, char ch)
{
	t_i32	c;
	t_i32	w;

	c = 0;
	w = 0;
	while (s[c] != '\0')
	{
		while (s[c] == ch)
			c++;
		if (s[c] != '\0')
			w++;
		while (s[c] != ch && s[c])
			c++;
	}
	return (w);
}

char	**ft_split(char const *s, char ch)
{
	t_i32	c;
	t_i32	w;
	t_i32	i;
	t_i32	wc;
	char	**strs;
	
	c = 0;
	w = 0;
	i = 0;
	wc = 0;
	printf("WC -> %d\n", ft_count_words(s, ch));
	strs = (char **)malloc((ft_count_words(s, ch) + 1) * sizeof(char *));
	if (!strs)
		return (NULL);
	while (s[i] != '\0')
	{
		c = 0;
		while (s[i] != ch && s[i] != '\0')
			i++;
		while (s[i] == ch && s[i++] != '\0')
			c++;
		printf("len -> %d, str -> %s\n", ft_strlen(ft_substr(s, w, (i - w - c)), ft_substr(s, w, (i - w - c));
		strs[wc++] = ft_substr(s, w, (i - w - c));
		w = i;
	}
	strs[wc] = NULL;
	return (strs);
}

int	main()
{
	t_i32	c;
	char	**strs;
	
	c = 0;
	strs = ft_split("HelloTworld!TTByeTworld!", 'T');
	printf("Input str -> Hello world! Bye world!, del -> \' \'\n");
	while (strs[c] != NULL)
	{
		printf("Spit str -> %s\n", strs[c]);
		c++;
	}
	c = 0;
        strs = ft_split("      split       this for   me  !       ", ' ');
        printf("Input str ->       split       this for   me  !       \n");
        while (strs[c] != NULL)
        {
                printf("Spit str -> %s\n", strs[c]);
                c++;
        }
	c = 0;
        strs = ft_split("                  olol", ' ');
        printf("Input str ->       split       this for   me  !       \n");
        while (strs[c] != NULL)
        {
                printf("Spit str -> %s\n", strs[c]);
                c++;
        }
	return (0);
}

